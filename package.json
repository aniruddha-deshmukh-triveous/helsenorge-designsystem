{
  "name": "hn-designsystem",
  "version": "1.0.0",
  "description": "NPM pakke og dokumentasjon for Helsenorges designsystem",
  "repository": {
    "type": "tfs",
    "url": "https://dev.azure.com/nhnfelles/Helsenorge/_git/HN-Designsystem"
  },
  "homepage": "https://helsenorge.design",
  "author": "Helsenorge",
  "maintainers": [
    "ROX"
  ],
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "prebuild": "lerna run generate:componentdata",
    "build": "lerna run build",
    "version:latest": "lerna version",
    "version:beta": "lerna version --preid=beta --allow-branch=*/* --force-publish=*",
    "publish:latest": "lerna publish from-git --yes",
    "publish:beta": "lerna publish from-git --dist-tag=beta --yes",
    "clean:npm": "npm-run-all clean:packages clean:root",
    "clean:packages": "lerna clean --yes",
    "deploy:documentation": "netlify deploy --site 3eb86f35-9926-4654-8937-33464387f516 --dir web/public --prod",
    "deploy:storybook": "netlify deploy --site 69e5c387-fee4-47d2-9498-67068981bee7 --dir npm/designsystem/dist --prod",
    "deploy:storybook:next": "netlify deploy --site 69e5c387-fee4-47d2-9498-67068981bee7 --dir npm/designsystem/dist --alias next",
    "clean:root": "rimraf node_modules",
    "postversion": "npm run changelog",
    "changelog": "conventional-changelog --config changelog.config.js --infile CHANGELOG.md --same-file --release-count 0 --skip-unstable --tag-prefix v --outputUnreleased false",
    "postchangelog": "git commit --include CHANGELOG.md -m \"docs: oppdater CHANGELOG\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "validate": "npm-run-all typecheck prettier lint",
    "prettier": "lerna run prettier",
    "prettier:fix": "lerna run prettier:fix",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "typecheck": "lerna run typecheck",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "husky": "^8.0.1",
    "lerna": "^5.6.1",
    "lint-staged": "^13.0.3",
    "netlify-cli": "^12.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.8.4"
  },
  "engines": {
    "node": "^16.11.0",
    "npm": "^8.3.0"
  }
}
